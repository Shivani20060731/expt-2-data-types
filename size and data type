#include <iostream>
#include <string>
using namespace std;

int main() {
    int a;
    cout<<"Enter  integer : ";
    cin >> a;
    cout << "Integer = " << a << " And  size is : "<< sizeof(a) <<"bytes"<<endl ;
    
    float b;
    cout<<"Enter  decimal number : ";
    cin >> b;
    cout << "Decimal = " << b << " And  size is : "<< sizeof(b) <<"bytes"<<endl ;
    
    string c;
    cout<<"Enter  String : ";
    cin >> c;
    cout << "String = " << c << " And  size is : "<< sizeof(c) <<"bytes"<<endl ;
    
    double d;
    cout << "Enter  double : ";
    cin >> d;
    cout << "Double = " << d << " And  size is : " << sizeof(d) << "bytes" << endl;
    
    char e;
    cout << "Enter  character : ";
    cin >> e;
    cout << "Char =  " << e << " And  size is : " << sizeof(e) << "bytes" << endl;
    
    bool f;
    cout << "Enter boolean : ";
    cin >> f;
    cout << "Boolean = " << f << " And  size is : " << sizeof(f) <<" bytes "<< endl;
    
    return 0;
}

output
//
Enter  integer : 56
Integer = 56 And  size is : 4bytes
Enter  decimal number : 9.8
Decimal = 9.8 And  size is : 4bytes
Enter  String : hello
String = hello And  size is : 32bytes
Enter  double : 8
Double = 8 And  size is : 8bytes
Enter  character : h
Char =  h And  size is : 1bytes
Enter boolean : 7
Boolean = 1 And  size is : 1 bytes  
 
//
